= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    .markdownify-menu{"data-target" => "markdown"}
      %a.btn--insert{"data-prefix" => "*", "data-suffix" => "*", :href => "javascript:void(0)"} i
      %a.btn--insert{"data-prefix" => "**", "data-suffix" => "**", :href => "javascript:void(0)"} b
      %a.btn--insert{"data-prefix" => "# ", :href => "javascript:void(0)"} h1
      %a.btn--insert{"data-prefix" => "## ", :href => "javascript:void(0)"} h2
      %a.btn--insert{"data-prefix" => "> ", :href => "javascript:void(0)"} quote
      %a.btn--insert{"data-prefix" => "* ", :href => "javascript:void(0)"} list
      %a.btn--insert{"data-prefix" => "1. ", :href => "javascript:void(0)"} 1.
      %a.btn--insert{"data-type" => "link", :href => "javascript:void(0)"} link
    = f.text_area :body, class: 'markdown', id: 'markdown'
  .field
    = f.label :happened_at
    = f.datetime_select :happened_at
  .field
    = f.label :professor
    = f.text_field :professor
  .actions
    = f.submit 'Save'
